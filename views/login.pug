extends layout.pug

block title
    title Login

block content
    
    div(class="rows")
        h1(class="col-6 mx-auto my-5") Login
    
    if login_error
        div(class="alert alert-danger" role="alert") #{login_error}
    
    div(class="rows")
        div(class="col-md-6 mx-auto")
            form(action="/login", method="post" id="login")
                div(class="form-group row")
                    label(for="username" class="col-md-3 col-form-label") Username:
                    div(class="col-md-9")
                        input(type="text" class="form-control", name="username" id="username" placeholder="abc123")
                div(class="form-group row")
                    label(for="password" class="col-md-3 col-form-label") Password:
                    div(class="col-md-9")
                        input(type="password" name="password" class="form-control" id="password" placeholder="Password")
                div(class="form-group")
                    input(type="hidden")
                    button(type="submit" class="btn btn-primary") Log In
                p
                | I am a new user. 
                a(href="/") Sign up now